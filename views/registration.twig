{% include 'header.twig' %}
{% include 'navbar.twig' %}
<div class="container">

	 {% for err in errors %} 
	<div class="alert alert-danger">
		<p>{{ err.msg|e }}</p>
	</div>
	  {% endfor %}
 <form action="/users/registration" method="post">
  <div class="form-group">
    <label for="email">Username</label>
    <input type="text" class="form-control" name="username" value="{%if errors.username %}{{errors.username.value}}{% else %}{{user.username}}{% endif %}">
  </div>	
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" name="email" value="{%if errors.email %}{{errors.email.value}}{% else %}{{user.email}}{% endif %}">
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" name="password" >
  </div>
  <div class="form-group">
    <label for="email">Address:</label>
    <input type="text" class="form-control" name="address" value="{%if errors.address %}{{errors.address.value}}{% else %}{{user.address}}{% endif %}">
  </div>
  <div class="form-group">
    <label for="email">Phone:</label>
    <input type="text" class="form-control" name="phone"value="{%if errors.phone %}{{errors.phone.value}}{% else %}{{user.phone}}{% endif %}">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

</div>